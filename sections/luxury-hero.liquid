{{ 'luxury-hero.css' | asset_url | stylesheet_tag }}
<script src="{{ 'luxury-hero.js' | asset_url }}" defer></script>

<section class="luxury-hero" id="luxury-hero-{{ section.id }}" data-height="{{ section.settings.height }}">
  <div class="luxury-hero__container">
    
    <!-- Background Media -->
    <div class="luxury-hero__media">
      {%- for block in section.blocks -%}
        <div class="luxury-hero__slide {% if forloop.first %}active{% endif %}" 
             data-slide="{{ forloop.index0 }}"
             {{ block.shopify_attributes }}>
          
          {%- if block.settings.use_video and block.settings.video_url != blank -%}
            <!-- Video Background -->
            <div class="luxury-hero__video-wrapper">
              <video class="luxury-hero__video" 
                     autoplay 
                     muted 
                     loop 
                     playsinline
                     {% if block.settings.video_poster %}poster="{{ block.settings.video_poster | image_url: width: 1920 }}"{% endif %}>
                <source src="{{ block.settings.video_url | asset_url }}" type="video/mp4">
                {%- if block.settings.image -%}
                  <img src="{{ block.settings.image | image_url: width: 1920 }}" 
                       alt="{{ block.settings.heading }}"
                       width="1920"
                       height="1080"
                       class="luxury-hero__fallback">
                {%- endif -%}
              </video>
            </div>
          {%- elsif block.settings.image -%}
            <!-- Image Background -->
            <div class="luxury-hero__image-wrapper">
              <img src="{{ block.settings.image | image_url: width: 1920 }}" 
                   alt="{{ block.settings.heading }}"
                   width="1920"
                   height="1080"
                   class="luxury-hero__image"
                   loading="{% if forloop.first %}eager{% else %}lazy{% endif %}">
            </div>
          {%- endif -%}
          
          <!-- Gradient Overlay -->
          <div class="luxury-hero__gradient"></div>
          
          <!-- Custom Overlay -->
          {%- if block.settings.overlay_opacity > 0 -%}
            <div class="luxury-hero__overlay" 
                 style="background: {{ block.settings.overlay_color }}; opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
    
    <!-- Content -->
    <div class="luxury-hero__content">
      <div class="luxury-hero__content-wrapper">
        
        {%- for block in section.blocks -%}
          <div class="luxury-hero__slide-content {% if forloop.first %}active{% endif %}" 
               data-slide="{{ forloop.index0 }}">
            
            <div class="luxury-hero__text-content">
              {%- if block.settings.subheading != blank -%}
                <div class="luxury-hero__subheading" 
                     style="color: {{ block.settings.text_color }};">
                  {{ block.settings.subheading }}
                </div>
              {%- endif -%}
              
              {%- if block.settings.heading != blank -%}
                <h1 class="luxury-hero__heading" 
                    style="color: {{ block.settings.text_color }};">
                  {{ block.settings.heading }}
                </h1>
              {%- endif -%}
              
              {%- if block.settings.description != blank -%}
                <div class="luxury-hero__description" 
                     style="color: {{ block.settings.text_color }};">
                  {{ block.settings.description }}
                </div>
              {%- endif -%}
              
              {%- if block.settings.button_text_1 != blank or block.settings.button_text_2 != blank -%}
                <div class="luxury-hero__buttons">
                  {%- if block.settings.button_text_1 != blank -%}
                    <a href="{{ block.settings.button_link_1 | default: '#' }}" 
                       class="luxury-hero__button luxury-hero__button--primary">
                      <span>{{ block.settings.button_text_1 }}</span>
                      <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </a>
                  {%- endif -%}
                  
                  {%- if block.settings.button_text_2 != blank -%}
                    <a href="{{ block.settings.button_link_2 | default: '#' }}" 
                       class="luxury-hero__button luxury-hero__button--secondary">
                      <span>{{ block.settings.button_text_2 }}</span>
                    </a>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
            
            {%- if block.settings.show_scroll_indicator -%}
              <div class="luxury-hero__scroll-indicator">
                <div class="luxury-hero__scroll-text">Discover More</div>
                <div class="luxury-hero__scroll-line"></div>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
    
    <!-- Navigation -->
    {%- if section.blocks.size > 1 -%}
      <div class="luxury-hero__navigation">
        <!-- Dots -->
        <div class="luxury-hero__dots">
          {%- for block in section.blocks -%}
            <button class="luxury-hero__dot {% if forloop.first %}active{% endif %}" 
                    data-slide="{{ forloop.index0 }}"
                    aria-label="Go to slide {{ forloop.index }}">
              <span class="luxury-hero__dot-fill"></span>
            </button>
          {%- endfor -%}
        </div>
        
        <!-- Arrows -->
        <div class="luxury-hero__arrows">
          <button class="luxury-hero__arrow luxury-hero__arrow--prev" 
                  aria-label="Previous slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          
          <button class="luxury-hero__arrow luxury-hero__arrow--next" 
                  aria-label="Next slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Progress Bar -->
      <div class="luxury-hero__progress">
        <div class="luxury-hero__progress-bar"></div>
      </div>
    {%- endif -%}
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const heroSection = document.getElementById('luxury-hero-{{ section.id }}');
  if (heroSection && typeof LuxuryHero !== 'undefined') {
    new LuxuryHero(heroSection, {
      autoplay: {{ section.settings.autoplay | json }},
      autoplaySpeed: {{ section.settings.autoplay_speed | times: 1000 }},
      enableParallax: {{ section.settings.enable_parallax | json }},
      transitionDuration: {{ section.settings.transition_duration | times: 1000 }}
    });
  }
});
</script>

{% schema %}
{
  "name": "Luxury Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section height",
      "options": [
        {
          "value": "small",
          "label": "Small (60vh)"
        },
        {
          "value": "medium",
          "label": "Medium (80vh)"
        },
        {
          "value": "large",
          "label": "Large (100vh)"
        }
      ],
      "default": "large"
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 4,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Auto-rotate speed",
      "default": 7
    },
    {
      "type": "range",
      "id": "transition_duration",
      "min": 0.8,
      "max": 2,
      "step": 0.1,
      "unit": "s",
      "label": "Transition duration",
      "default": 1.2
    },
    {
      "type": "checkbox",
      "id": "enable_parallax",
      "label": "Enable parallax effect",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "header",
          "content": "Media"
        },
        {
          "type": "checkbox",
          "id": "use_video",
          "label": "Use video background",
          "default": false
        },
        {
          "type": "text",
          "id": "video_url",
          "label": "Video file name",
          "info": "Upload MP4 to assets folder. Enter filename like 'hero-video.mp4'"
        },
        {
          "type": "image_picker",
          "id": "video_poster",
          "label": "Video poster image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background image",
          "info": "1920 x 1080px recommended"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Luxury Furniture Collection"
        },
        {
          "type": "textarea",
          "id": "heading",
          "label": "Heading",
          "default": "Transform Your Space with Timeless Elegance"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Discover our curated collection of premium furniture pieces, crafted with exceptional attention to detail and designed to elevate your living experience."
        },
        {
          "type": "header",
          "content": "Buttons"
        },
        {
          "type": "text",
          "id": "button_text_1",
          "label": "Primary button text",
          "default": "Explore Collection"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "Primary button link"
        },
        {
          "type": "text",
          "id": "button_text_2",
          "label": "Secondary button text",
          "default": "Book Consultation"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Secondary button link"
        },
        {
          "type": "header",
          "content": "Style"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "Overlay color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "min": 0,
          "max": 60,
          "step": 5,
          "unit": "%",
          "label": "Overlay opacity",
          "default": 20
        },
        {
          "type": "checkbox",
          "id": "show_scroll_indicator",
          "label": "Show scroll indicator",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Luxury Hero",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
