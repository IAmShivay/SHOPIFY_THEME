{{ 'testimonials-slider.css' | asset_url | stylesheet_tag }}
<style>
.furniture-testimonials {
  padding: 5rem 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.furniture-testimonials__header {
  text-align: center;
  margin-bottom: 4rem;
}

.furniture-testimonials__subheading {
  font-size: 1rem;
  font-weight: 500;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.5rem;
}

.furniture-testimonials__heading {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 1rem;
}

.furniture-testimonials__description {
  font-size: 1.125rem;
  color: #6b7280;
  max-width: 600px;
  margin: 0 auto;
}

.furniture-testimonials__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.furniture-testimonial-card {
  background: white;
  border-radius: 1rem;
  padding: 2rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  position: relative;
}

.furniture-testimonial-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

.furniture-testimonial-card__quote {
  position: absolute;
  top: -10px;
  left: 2rem;
  width: 40px;
  height: 40px;
  background: #2c3e50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.5rem;
}

.furniture-testimonial-card__rating {
  display: flex;
  gap: 0.25rem;
  margin-bottom: 1rem;
  margin-top: 1rem;
}

.furniture-testimonial-card__star {
  width: 20px;
  height: 20px;
  color: #fbbf24;
}

.furniture-testimonial-card__text {
  font-size: 1.125rem;
  line-height: 1.6;
  color: #374151;
  margin-bottom: 1.5rem;
  font-style: italic;
}

.furniture-testimonial-card__author {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.furniture-testimonial-card__avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  object-fit: cover;
  background: #e5e7eb;
}

.furniture-testimonial-card__author-info {
  flex: 1;
}

.furniture-testimonial-card__name {
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 0.25rem;
}

.furniture-testimonial-card__position {
  font-size: 0.875rem;
  color: #6b7280;
}

.furniture-testimonial-card__product {
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 1px solid #e5e7eb;
  font-size: 0.875rem;
  color: #6b7280;
}

@media (max-width: 768px) {
  .furniture-testimonials__grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .furniture-testimonial-card {
    padding: 1.5rem;
  }
}
</style>

<div class="furniture-testimonials section-bg" {% render 'section-properties' %}>
  <div class="container mx-auto px-4">
    
    {%- if section.settings.subheading != blank or section.settings.heading != blank or section.settings.description != blank -%}
      <div class="furniture-testimonials__header">
        {%- if section.settings.subheading != blank -%}
          <div class="furniture-testimonials__subheading">{{ section.settings.subheading }}</div>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h2 class="furniture-testimonials__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if section.settings.description != blank -%}
          <div class="furniture-testimonials__description">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    <div class="furniture-testimonials__grid">
      {%- for block in section.blocks -%}
        <div class="furniture-testimonial-card" {{ block.shopify_attributes }}>
          <div class="furniture-testimonial-card__quote">"</div>
          
          {%- if section.settings.show_rating and block.settings.rating > 0 -%}
            <div class="furniture-testimonial-card__rating">
              {%- liquid
                assign full_stars = block.settings.rating | floor
                assign has_half_star = block.settings.rating | modulo: 1
              -%}
              
              {%- for i in (1..full_stars) -%}
                <svg class="furniture-testimonial-card__star" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {%- endfor -%}
              
              {%- if has_half_star >= 0.5 -%}
                <svg class="furniture-testimonial-card__star" fill="currentColor" viewBox="0 0 20 20">
                  <defs>
                    <linearGradient id="half-star-{{ forloop.index }}">
                      <stop offset="50%" stop-color="currentColor"/>
                      <stop offset="50%" stop-color="#e5e7eb"/>
                    </linearGradient>
                  </defs>
                  <path fill="url(#half-star-{{ forloop.index }})" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {%- endif -%}
            </div>
          {%- endif -%}
          
          {%- if block.settings.text != blank -%}
            <div class="furniture-testimonial-card__text">{{ block.settings.text }}</div>
          {%- endif -%}
          
          <div class="furniture-testimonial-card__author">
            {%- if block.settings.avatar -%}
              <img src="{{ block.settings.avatar | image_url: width: 100 }}" 
                   alt="{{ block.settings.name }}" 
                   class="furniture-testimonial-card__avatar"
                   loading="lazy">
            {%- else -%}
              <div class="furniture-testimonial-card__avatar"></div>
            {%- endif -%}
            
            <div class="furniture-testimonial-card__author-info">
              {%- if block.settings.name != blank -%}
                <div class="furniture-testimonial-card__name">{{ block.settings.name }}</div>
              {%- endif -%}
              
              {%- if block.settings.position != blank -%}
                <div class="furniture-testimonial-card__position">{{ block.settings.position }}</div>
              {%- endif -%}
            </div>
          </div>
          
          {%- if block.settings.product != blank -%}
            <div class="furniture-testimonial-card__product">
              Purchased: {{ block.settings.product.title }}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
    
  </div>
</div>

{% schema %}
{
  "name": "Furniture Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Real Reviews from Real Customers"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Don't just take our word for it. See what our satisfied customers have to say about their furniture and shopping experience.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show ratings",
      "default": true
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product (optional)"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 0.5,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Review text",
          "default": "The quality of furniture exceeded our expectations! The delivery team was professional and the assembly service made everything so easy."
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Customer photo",
          "info": "100 x 100px recommended"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer name",
          "default": "Sarah Johnson"
        },
        {
          "type": "text",
          "id": "position",
          "label": "Customer info",
          "default": "Verified Customer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Furniture Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
