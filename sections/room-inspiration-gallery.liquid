<style>
.room-inspiration {
  padding: 5rem 0;
}

.room-inspiration__header {
  text-align: center;
  margin-bottom: 4rem;
}

.room-inspiration__subheading {
  font-size: 1rem;
  font-weight: 500;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.5rem;
}

.room-inspiration__heading {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 1rem;
}

.room-inspiration__description {
  font-size: 1.125rem;
  color: #6b7280;
  max-width: 600px;
  margin: 0 auto;
}

.room-inspiration__grid {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  gap: 1rem;
  max-width: 1400px;
  margin: 0 auto;
}

.room-inspiration__item {
  position: relative;
  border-radius: 1rem;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  cursor: pointer;
}

.room-inspiration__item:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.room-inspiration__item--large {
  grid-column: span 8;
  aspect-ratio: 16/9;
}

.room-inspiration__item--medium {
  grid-column: span 4;
  aspect-ratio: 4/3;
}

.room-inspiration__item--small {
  grid-column: span 4;
  aspect-ratio: 1/1;
}

.room-inspiration__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.room-inspiration__item:hover .room-inspiration__image {
  transform: scale(1.05);
}

.room-inspiration__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.7) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.room-inspiration__item:hover .room-inspiration__overlay {
  opacity: 1;
}

.room-inspiration__content {
  padding: 2rem;
}

.room-inspiration__subheading-item {
  font-size: 0.875rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.5rem;
  opacity: 0.9;
}

.room-inspiration__title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.75rem;
}

.room-inspiration__text {
  font-size: 1rem;
  line-height: 1.5;
  margin-bottom: 1.5rem;
  opacity: 0.95;
}

.room-inspiration__button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background-color: white;
  color: #1f2937;
  text-decoration: none;
  border-radius: 0.5rem;
  font-weight: 600;
  transition: all 0.3s ease;
}

.room-inspiration__button:hover {
  background-color: #f9fafb;
  transform: translateY(-2px);
}

@media (max-width: 1024px) {
  .room-inspiration__item--large {
    grid-column: span 12;
  }
  
  .room-inspiration__item--medium {
    grid-column: span 6;
  }
  
  .room-inspiration__item--small {
    grid-column: span 6;
  }
}

@media (max-width: 768px) {
  .room-inspiration__grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .room-inspiration__item--large,
  .room-inspiration__item--medium,
  .room-inspiration__item--small {
    grid-column: span 1;
    aspect-ratio: 4/3;
  }
  
  .room-inspiration__overlay {
    opacity: 1;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.8) 100%);
  }
  
  .room-inspiration__content {
    padding: 1.5rem;
  }
  
  .room-inspiration__title {
    font-size: 1.25rem;
  }
}
</style>

<div class="room-inspiration section-bg" {% render 'section-properties' %}>
  <div class="container mx-auto px-4">
    
    {%- if section.settings.subheading != blank or section.settings.heading != blank or section.settings.description != blank -%}
      <div class="room-inspiration__header">
        {%- if section.settings.subheading != blank -%}
          <div class="room-inspiration__subheading">{{ section.settings.subheading }}</div>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h2 class="room-inspiration__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if section.settings.description != blank -%}
          <div class="room-inspiration__description">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    <div class="room-inspiration__grid">
      {%- for block in section.blocks -%}
        {%- liquid
          assign size_class = 'room-inspiration__item--medium'
          case block.settings.size
            when 'large'
              assign size_class = 'room-inspiration__item--large'
            when 'small'
              assign size_class = 'room-inspiration__item--small'
          endcase
        -%}
        
        <a href="{{ block.settings.link | default: '#' }}" 
           class="room-inspiration__item {{ size_class }}" 
           {{ block.shopify_attributes }}>
          
          {%- if block.settings.image -%}
            <img src="{{ block.settings.image | image_url: width: 800 }}" 
                 alt="{{ block.settings.heading }}" 
                 class="room-inspiration__image"
                 loading="lazy">
          {%- else -%}
            <div class="room-inspiration__image" style="background-color: #f3f4f6;"></div>
          {%- endif -%}
          
          <div class="room-inspiration__overlay">
            <div class="room-inspiration__content">
              {%- if block.settings.subheading != blank -%}
                <div class="room-inspiration__subheading-item">{{ block.settings.subheading }}</div>
              {%- endif -%}
              
              {%- if block.settings.heading != blank -%}
                <h3 class="room-inspiration__title">{{ block.settings.heading }}</h3>
              {%- endif -%}
              
              {%- if block.settings.text != blank -%}
                <div class="room-inspiration__text">{{ block.settings.text }}</div>
              {%- endif -%}
              
              {%- if block.settings.button_text != blank -%}
                <span class="room-inspiration__button">
                  {{ block.settings.button_text }}
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </span>
              {%- endif -%}
            </div>
          </div>
        </a>
      {%- endfor -%}
    </div>
    
  </div>
</div>

