<style>
.furniture-categories {
  padding: 4rem 0;
}

.furniture-categories__header {
  text-align: center;
  margin-bottom: 3rem;
}

.furniture-categories__subheading {
  font-size: 1rem;
  font-weight: 500;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.5rem;
}

.furniture-categories__heading {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 1rem;
}

.furniture-categories__description {
  font-size: 1.125rem;
  color: #6b7280;
  max-width: 600px;
  margin: 0 auto;
}

.furniture-categories__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

.furniture-category-card {
  position: relative;
  border-radius: 1rem;
  overflow: hidden;
  aspect-ratio: 4/3;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.furniture-category-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.furniture-category-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.furniture-category-card__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.7) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
  transition: background 0.3s ease;
}

.furniture-category-card:hover .furniture-category-card__overlay {
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.8) 100%);
}

.furniture-category-card__content {
  padding: 2rem;
}

.furniture-category-card__title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.furniture-category-card__count {
  font-size: 0.9rem;
  opacity: 0.9;
  margin-bottom: 1rem;
}

.furniture-category-card__button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background-color: white;
  color: #1f2937;
  text-decoration: none;
  border-radius: 0.5rem;
  font-weight: 600;
  transition: all 0.3s ease;
}

.furniture-category-card__button:hover {
  background-color: #f9fafb;
  transform: translateY(-2px);
}

.furniture-categories__view-all {
  text-align: center;
}

.furniture-categories__view-all-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem 2rem;
  background-color: #2c3e50;
  color: white;
  text-decoration: none;
  border-radius: 0.5rem;
  font-weight: 600;
  transition: all 0.3s ease;
}

.furniture-categories__view-all-button:hover {
  background-color: #34495e;
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .furniture-categories__grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .furniture-category-card__content {
    padding: 1.5rem;
  }
  
  .furniture-category-card__title {
    font-size: 1.25rem;
  }
}
</style>

<div class="furniture-categories section-bg" {% render 'section-properties' %}>
  <div class="container mx-auto px-4">
    
    {%- if section.settings.subheading != blank or section.settings.heading != blank or section.settings.description != blank -%}
      <div class="furniture-categories__header">
        {%- if section.settings.subheading != blank -%}
          <div class="furniture-categories__subheading">{{ section.settings.subheading }}</div>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h2 class="furniture-categories__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if section.settings.description != blank -%}
          <div class="furniture-categories__description">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    <div class="furniture-categories__grid">
      {%- for block in section.blocks -%}
        {%- liquid
          assign collection = collections[block.settings.collection]
          assign image = block.settings.image | default: collection.featured_image
          assign title = block.settings.title | default: collection.title
          assign url = block.settings.url | default: collection.url
        -%}
        
        <a href="{{ url }}" class="furniture-category-card" {{ block.shopify_attributes }}>
          {%- if image -%}
            <img src="{{ image | image_url: width: 600 }}" 
                 alt="{{ title }}" 
                 class="furniture-category-card__image"
                 loading="lazy">
          {%- else -%}
            <div class="furniture-category-card__image" style="background-color: #f3f4f6;"></div>
          {%- endif -%}
          
          <div class="furniture-category-card__overlay">
            <div class="furniture-category-card__content">
              <h3 class="furniture-category-card__title">{{ title }}</h3>
              
              {%- if collection and section.settings.show_collection_count -%}
                <div class="furniture-category-card__count">
                  {{ collection.products_count }} 
                  {%- if collection.products_count == 1 -%}item{%- else -%}items{%- endif -%}
                </div>
              {%- endif -%}
              
              <span class="furniture-category-card__button">
                Shop Now
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
          </div>
        </a>
      {%- endfor -%}
    </div>
    
    {%- if section.settings.link_text != blank and section.settings.link_url != blank -%}
      <div class="furniture-categories__view-all">
        <a href="{{ section.settings.link_url }}" class="furniture-categories__view-all-button">
          {{ section.settings.link_text }}
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    {%- endif -%}
    
  </div>
</div>

{% schema %}
{
  "name": "Categories",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Shop by Room"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Furniture for Every Space"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover our carefully curated collections designed to transform every room in your home.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_collection_count",
      "label": "Show product count",
      "default": true
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button text",
      "default": "View All Furniture"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom image",
          "info": "600 x 450px recommended. Uses collection featured image if not set."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom title",
          "info": "Uses collection title if not set."
        },
        {
          "type": "url",
          "id": "url",
          "label": "Custom URL",
          "info": "Uses collection URL if not set."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Categories",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}
